					<a href="{{ path('home') }}" class="text-tertiary-color font-semibold hover:bg-secondary-color px-4 py-2 text-sm border border-secondary-color  {% if app.request.attributes.get('_route') == 'home' %} {{ ' bg-secondary-color' }} {% endif %}" aria-current="page">Accueil</a>
